# Cache policy
<IfModule mod_headers.c>
  # Always revalidate HTML files (force fresh HTML after deploy)
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>

  # Cache static assets aggressively; use ?v= to bust cache on deploy
  <FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|webp|ico|woff|woff2)$">
    Header set Cache-Control "public, max-age=2592000, immutable"
  </FilesMatch>
</IfModule>

# Optional: disable ETags for HTML to prevent stale caches
<IfModule mod_headers.c>
  <FilesMatch "\.(html|htm)$">
    Header unset ETag
  </FilesMatch>
</IfModule>
FileETag None
