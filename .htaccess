# Forzar HTTPS (omitido en localhost para desarrollo)
RewriteEngine On

# Corregir URLs con ruta del sistema (p.ej. /var/www/html/...)
RewriteRule ^var/www/html/?(.*)$ /$1 [R=302,L]

RewriteCond %{HTTPS} !=on
RewriteCond %{HTTP_HOST} !^localhost(:[0-9]+)?$ [NC]
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# Ocultar extensiones .html (redirección canonizada)
RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
RewriteRule ^ %1 [R=301,NE,L]

# Servir archivos .html cuando se pidan sin extensión
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^ %{REQUEST_URI}.html [L]

# Página por defecto
DirectoryIndex index.html

# Deshabilitar listado de directorios
Options -Indexes

# Cabeceras de seguridad
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "DENY"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
  # HSTS (requiere HTTPS activo); se ignora en HTTP
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# Caché básica para assets
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|ico|webp|woff2?)$">
  <IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 30 days"
  </IfModule>
  <IfModule mod_headers.c>
    Header set Cache-Control "public, max-age=2592000, immutable"
  </IfModule>
</FilesMatch>
# Cache policy
<IfModule mod_headers.c>
  # Always revalidate HTML files (force fresh HTML after deploy)
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>

  # Cache static assets aggressively; use ?v= to bust cache on deploy
  <FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|webp|ico|woff|woff2)$">
    Header set Cache-Control "public, max-age=2592000, immutable"
  </FilesMatch>
</IfModule>

# Optional: disable ETags for HTML to prevent stale caches
<IfModule mod_headers.c>
  <FilesMatch "\.(html|htm)$">
    Header unset ETag
  </FilesMatch>
</IfModule>
FileETag None
